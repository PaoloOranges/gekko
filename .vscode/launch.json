{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [

        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${workspaceFolder}/gekko.js",
            "args": [
                "--ui"
            ],
            "env": {
                "NODE_ENV": "DEBUG"
            }
        },
        {
            "name": "Attach",
            "type": "node",
            "request": "attach",
            "port": 5858,
            "address": "localhost",
            "restart": false,
            "sourceMaps": false,
            "outFiles": [],
            "localRoot": "${workspaceRoot}",
            "remoteRoot": null
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Test",
            "program": "${workspaceFolder}/test.js",   
                     
            "env": {
                "NODE_ENV": "DEBUG"
            }
        }
    ]
}